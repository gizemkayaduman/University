@{
    ViewBag.Title = " ";
}

@section Styles {
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f0f4f8;
            margin: 0;
            padding: 0;
        }

        .container {
            text-align: center;
            padding-top: 80px;
        }

        h2 {
            font-size: 2.5rem;
            font-weight: 600;
            color: #333;
            margin-bottom: 20px;
        }

        p {
            font-size: 1.2rem;
            color: #555;
            margin-bottom: 40px;
        }

        .menu-container {
            display: flex;
            justify-content: center;
            gap: 30px;
            flex-direction: column;
            align-items: center;
        }

        .menu-button {
            display: inline-block;
            padding: 25px 50px; /* Buton boyutlarını büyüttük */
            font-size: 1.5rem; /* Font büyüklüğünü artırdık */
            font-weight: 600;
            color: white;
            background-color: #0d6efd; /* Lux tema ile uyumlu mavi */
            border-radius: 12px;
            text-decoration: none;
            width: 100%;
            max-width: 400px;
            transition: background-color 0.3s ease, transform 0.3s ease;
            box-shadow: 0 4px 12px rgba(0, 123, 255, 0.2);
        }

            .menu-button:hover {
                background-color: #084298; /* Hover rengi */
                transform: translateY(-5px); /* Hover etkisi ile butonun yukarı kayması */
            }

            .menu-button:active {
                background-color: #033c73; /* Tıklama efekti */
                transform: translateY(0);
            }

        footer {
            position: fixed;
            bottom: 0;
            width: 100%;
            background-color: #333;
            color: white;
            text-align: center;
            padding: 10px;
        }
    </style>
}

<div class="container">
    <h2 class="mt-4">@ViewBag.Title</h2>
    <p>Giriş yapmak için tıklayın:</p>

    <div class="menu-container">
        <a href="@Url.Action("Login", "Account", new { role = "Ogrenci" })" class="menu-button">Öğrenci Girişi</a>
        <a href="@Url.Action("Login", "Account", new { role = "BolumSekreteri" })" class="menu-button">Bölüm Sekreteri Girişi</a>
    </div>
</div>